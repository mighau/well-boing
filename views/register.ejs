<%- include('./partials/header.ejs') %>
<div class="container">
  <h1>Register to WellBoing!</h1>
<%- include('./partials/errors.ejs') %>
  <p>Your journey starts here...</p>
<form method="POST" action="/auth/register">
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control mw-75" id="email" name="email" aria-describedby="emailHelp" placeholder="Enter email">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control mw-75" id="password" name="password" placeholder="Password">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Passwordverification</label>
    <input type="password" class="form-control" id="exampleInputPassword1" name="verification" placeholder="Re-type the password">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<a href="/" class="btn btn-secondary my-2">Back</a>
</div>
<%- include('./partials/footer.ejs') %>