<%- include('./partials/header.ejs') %>
<div class="container">
  <h1>Login to use WellBoing!</h1>
  <% if (errors && errors.length > 0) { %>
    <% errors.forEach((error) => { %>
      <div class="alert alert-danger" role="alert">
        <%= error %>
      </div>
    <% }); %>
<% } %>
  <form method="POST" action="/auth/login">
    <div class="form-group">
      <label for="exampleInputEmail1">Email address</label>
      <input type="email" class="form-control mw-75" id="email" name="email" aria-describedby="emailHelp" value="<%= email %>" placeholder="Enter email">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control mw-75" id="password" name="password" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <a href="/" class="btn btn-secondary my-2">Back</a>
  </div>
<%- include('./partials/footer.ejs') %>